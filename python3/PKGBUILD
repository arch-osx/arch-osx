# PKGBUILD autoconverted by ABStoOSX 0.5
# ArchLinux Maintainer: Sven-Hendrik Haase <sh@lutzhaase.com>
pkgname=python3
pkgver=3.1.1
pkgrel=2
pkgdesc="Python is a high-level scripting language."
url="http://www.python.org"
arch=('macx86')
depends=('db' 'expat' 'bzip2' 'gdbm' 'openssl' 'zlib')
makedepends=('tk' 'sqlite3')
license=('PSFLv2') # Python Software Foundation License Version 2; GPL-compatible
#install=('stackless-python.install')
source=(http://www.python.org/ftp/python/$pkgver/Python-$pkgver.tar.bz2 )
md5sums=('d1ddd9f16e3c6a51c7208f33518cd674')
#noextract=()

build() {
  cd $srcdir/Python-$pkgver/

  # don't look for tcl/tk in OSX frameworks, use our own
  sed -i~ -e 's/self.detect_tkinter_darwin(inc_dirs, lib_dirs)/False/' setup.py

  # architecture doesn't propagate to module compilation
  sed -i~ -e "s#extra_args = ext.extra_compile_args#extra_args = ext.extra_compile_args + ['-arch', 'i386']#" Lib/distutils/command/build_ext.py
  
  ./configure --prefix=/opt/arch --oldincludedir=/opt/arch --with-threads --enable-shared

  make || return 1
  make DESTDIR=$pkgdir install

  cd $pkgdir/opt/arch/bin
  mv 2to3 python3.0-2to3
}
